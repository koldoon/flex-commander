<?xml version="1.0"?>
<s:Skin
    xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:snapshot="com.qwickserve.components.snapshot.*" xmlns:qs="http://qs.petrosoft.com"

    minWidth="450" minHeight="200">

    <fx:Metadata>
        [HostComponent("spark.components.Panel")]
    </fx:Metadata>

    <s:states>
        <s:State name="normal"/>
        <s:State name="disabled"/>
        <s:State name="normalWithControlBar" stateGroups="withControls"/>
        <s:State name="disabledWithControlBar" stateGroups="withControls"/>
    </s:states>

    <!-- Shadowed background for GPU could be implemented this way only -->
    <snapshot:Snapshot left="0" right="0" top="0" bottom="0">
        <!-- 23 - to hide shadow edge from the screen -->
        <s:Rect left="22" right="22" top="22" bottom="22" radiusX="7" radiusY="7">
            <s:fill>
                <s:SolidColor color="#666666" alpha="1"/>
            </s:fill>
            <s:filters>
                <s:DropShadowFilter angle="90" distance="6" blurX="10" blurY="10" quality="3" alpha="0.2"/>
            </s:filters>
        </s:Rect>
    </snapshot:Snapshot>

    <!-- Sharp rect on the top -->
    <s:Rect left="20" right="20" top="20" bottom="20" radiusX="7" radiusY="7">
        <s:fill>
            <s:SolidColor color="#FFFFFF" alpha="1"/>
        </s:fill>
    </s:Rect>

    <!-- Main content. padding = 20-->
    <s:Group left="60" top="60" right="60" bottom="{70 + controlBarGroup.height}">
        <s:layout>
            <s:VerticalLayout gap="10" horizontalAlign="justify"/>
        </s:layout>

        <qs:Label id="titleDisplay" styleName="h2 left"/>
        <s:Group id="contentGroup" height="100%" minWidth="0" minHeight="0"/>
    </s:Group>

    <s:Group id="controlBarGroup" bottom="40" left="40" right="40">
        <s:layout>
            <s:HorizontalLayout gap="10" paddingTop="10" horizontalAlign="right"/>
        </s:layout>
    </s:Group>

</s:Skin>
