<?xml version="1.0"?>
<s:Panel
    xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
    skinClass="ru.koldoon.fc.resources.skins.panel.TitledPopupPanelSkin"
    title="Removing  {nodesTotal} {nodesTotal > 1 ? 'items' : 'item'}" width="1400">

    <s:layout>
        <s:VerticalLayout
            padding="20" paddingLeft="40" paddingRight="40"
            gap="20" horizontalAlign="justify"/>
    </s:layout>

    <s:Form styleName="simple">

        <s:FormItem label="Item:" width="100%">
            <s:Label
                text="{currentItem}"
                styleName="blue0" maxDisplayedLines="1" width="100%"/>
        </s:FormItem>

        <s:FormItem label="From:">
            <s:Label
                text="{srcDir}"
                styleName="blue0" maxDisplayedLines="1" width="100%"/>
        </s:FormItem>

        <s:FormItem label="Progress:">
            <s:Label
                text="{nodesProcessed} / {nodesTotal}  {Number(nodesProcessed / nodesTotal * 100).toFixed(2)}%"
                styleName="blue0"/>
        </s:FormItem>

    </s:Form>


    <s:controlBarContent>
        <!--<s:Button id="backgroundButton" label="Background"/>-->
        <s:Button id="cancelButton" label="Cancel"/>
    </s:controlBarContent>

    <fx:Script><![CDATA[

        [Bindable]
        public var nodesTotal:Number = 0;

        [Bindable]
        public var nodesProcessed:Number = 0;

        [Bindable]
        public var currentItem:String;

        [Bindable]
        public var srcDir:String;


        override public function setFocus():void {
            cancelButton.setFocus();
        }
        ]]></fx:Script>
</s:Panel>
